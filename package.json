{
  "name": "nexus",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "electron:compile": "tsc -p tsconfig.electron.json",
    "electron:dev": "concurrently --kill-others \"next dev --port 3456\" \"sleep 3 && electron .\"",
    "electron:template-db": "bash scripts/create-template-db.sh",
    "electron:resolve-symlinks": "node scripts/resolve-standalone-symlinks.js",
    "electron:prepare": "node scripts/prepare-standalone.js",
    "electron:build": "npm run build && npm run electron:prepare && npm run electron:template-db && npm run electron:compile && electron-builder",
    "postinstall": "electron-rebuild -f -w better-sqlite3 node-pty 2>/dev/null || true"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "build": {
    "appId": "com.nexus.app",
    "productName": "Nexus",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*.js",
      "!electron/**/*.ts"
    ],
    "extraResources": [
      {
        "from": "prisma/nexus-template.db",
        "to": "nexus-template.db"
      },
      {
        "from": "standalone-build",
        "to": "standalone"
      }
    ],
    "asarUnpack": [
      "**/*.node",
      "node_modules/node-pty/**"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@tanstack/react-query": "^5.90.20",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "geist": "^1.7.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "node-ical": "^0.25.1",
    "node-pty": "^1.1.0",
    "prisma": "^7.3.0",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-day-picker": "^9.13.1",
    "react-dom": "19.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "get-port-please": "^3.2.0",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
